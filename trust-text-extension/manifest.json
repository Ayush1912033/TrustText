{
  "manifest_version": 3,
  "name": "Trust Text Spam Detector",
  "version": "1.0",
  "description": "Right-click selected text to check if it's spam using Trust Text.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
